@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 36 50% 97%;
    --foreground: 20 12% 14%;
    --card: 36 50% 97%;
    --card-foreground: 20 12% 14%;
    --popover: 36 50% 97%;
    --popover-foreground: 20 12% 14%;
    --primary: 28 45% 64%;
    --primary-foreground: 36 50% 97%;
    --secondary: 28 30% 56%;
    --secondary-foreground: 36 50% 97%;
    --muted: 36 30% 92%;
    --muted-foreground: 20 8% 45%;
    --accent: 36 40% 95%;
    --accent-foreground: 20 12% 14%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 28 25% 85%;
    --input: 28 25% 85%;
    --ring: 28 45% 64%;
    --radius: 1rem;
    --chart-1: 28 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
    --whatsapp: 142 70% 49%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

html {
  scroll-behavior: smooth;
}

